<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.notes.MainActivity"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustResize|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.notes.AddActivity"
            android:label="@string/title_activity_add" 
            android:windowSoftInputMode="adjustResize|adjustPan" >
        </activity>
        <activity
            android:name="com.example.notes.EditActivity"
            android:label="@string/title_activity_edit" 
            android:windowSoftInputMode="adjustResize|adjustPan" >
        </activity>
        <activity
            android:name="com.example.notes.NoteActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name="com.example.notes.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>
</manifest>
